<Alloy>
	<Window class="container">
		<View id="vTitle">
			<Button id="btnClose" onClick="btnClose_onClick">Close</Button>
			<Label id="lblTitle">Feedback</Label>
		</View>
		<Label id="lblRestaurantName"></Label>
		<Label id="submitResult"></Label>
		<ScrollView id="svForm" onClick="svForm_onClick">
			<View class="field-row">
				<Label class="field-label">Name:</Label>
				<TextField id="tfName" onClick="textField_onClick" 
					class="field-textfield"></TextField>	
			</View>
			<View class="field-row">
				<Label class="field-label">Email:</Label>
				<TextField id="tfEmail" class="field-textfield"
					onClick="textField_onClick"></TextField>	
			</View>
			<View class="field-row">
				<Label class="field-label">Feedback:</Label>
				<View class="view-textbox-container">
					<TextArea id="taFeedback" class="field-textarea"
						onClick="textField_onClick"></TextArea>	
				</View>
			</View>
			<Button id="btnSubmit" onTouchstart="btn_onTouchstart" onTouchEnd="btn_onTouchend"
				onClick="btnSubmit_onClick">Submit
			</Button>
		</ScrollView>
	</Window>
</Alloy>
